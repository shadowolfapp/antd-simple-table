{
  "compilerOptions": {
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "removeComments": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    // 此处设置为node,才能解析import xx from 'xx'
    "moduleResolution": "node",
    "paths": {
      "*": [
        "src/*",
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "rollup.config.js"
  ]
}